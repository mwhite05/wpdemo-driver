{
    "install": {
        "map": [
            {
                "source": "./",
                "installTo": "./",
                "excludes": [
                    "mum-scripts",
                    "apache2"
                ]
            },
            {
                "source": "./apache2/sites-available/",
                "installTo": "/etc/apache2/sites-available/"
            }
        ],
        "scripts": {
            "afterInstall": [
                "./mum-scripts/after-install.php",
                "./mum-scripts/permissions-fix"
            ]
        }
    },
    "dependencies": [
        {
            "source": "git@github.com:WordPress/WordPress.git#4.5.3",
            "installTo": "./"
        }
    ]
}
